{
  "name": "@wsx/workspace",
  "version": "1.0.0",
  "description": "WSX monorepo - Framework-agnostic WebSocket library for reactive web applications",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "bun run --filter='@wsx/core' build && bun run --filter='@wsx/*' build",
    "dev": "bun run --filter='@wsx/*' dev",
    "test": "bun run --filter='@wsx/*' test",
    "clean": "bun run --filter='@wsx/*' clean",
    "lint": "bun run --filter='@wsx/*' lint",
    "example:hono": "cd examples/hono && bun run dev",
    "example:express": "cd examples/express && bun run start"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stukennedy/wsx.git"
  },
  "bugs": {
    "url": "https://github.com/stukennedy/wsx/issues"
  },
  "homepage": "https://github.com/stukennedy/wsx#readme",
  "license": "MIT"
}
